@model LessonVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Lesson.LessonId != 0 ? "Update" : "Create") Lesson</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Lesson.LessonId" hidden />
            <input asp-for="Lesson.CourseId" hidden />

            <div class="form-floating py-2 col-12">
                <input asp-for="Lesson.Title" class="form-control border-0 shadow" />
                <label asp-for="Lesson.Title" class="ms-2"></label>
                <span asp-validation-for="Lesson.Title" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-12">
                <input asp-for="Lesson.Description" class="form-control border-0 shadow" />
                <label asp-for="Lesson.Description" class="ms-2"></label>
                <span asp-validation-for="Lesson.Description" class="text-danger"></span>
            </div>

            <!-- Other form fields specific to Lesson model -->

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">
                        @(Model.Lesson.LessonId != 0 ? "Update" : "Create")
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Course" asp-action="Details" asp-route-courseId="@Model.Lesson.CourseId"
                       class="btn btn-outline-primary border form-control">
                        Back to Course
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>